rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to awards and events collections
    match /awards/{awardId} {
      allow read: if true;
      allow write: if false; // Only allow reads
    }

    match /events/{eventId} {
      allow read: if true;
      allow write: if false; // Only allow reads
    }

    // Allow anyone to create (write) a message to the contactMessages collection.
    // Deny reads, updates, and deletes to protect user privacy.
    match /contactMessages/{messageId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
